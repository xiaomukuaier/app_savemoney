{
  "name": "savemoney-app",
  "services": [
    {
      "name": "backend",
      "type": "backend",
      "build": {
        "type": "nixpacks",
        "path": "backend"
      },
      "env": {
        "FEISHU_APP_ID": {
          "type": "secret",
          "value": "${FEISHU_APP_ID}"
        },
        "FEISHU_APP_SECRET": {
          "type": "secret",
          "value": "${FEISHU_APP_SECRET}"
        },
        "FEISHU_TABLE_ID": {
          "type": "secret",
          "value": "${FEISHU_TABLE_ID}"
        },
        "OPENAI_API_KEY": {
          "type": "secret",
          "value": "${OPENAI_API_KEY}"
        },
        "LANGCHAIN_API_KEY": {
          "type": "secret",
          "value": "${LANGCHAIN_API_KEY}"
        }
      },
      "ports": [
        {
          "port": 8000,
          "protocol": "http"
        }
      ]
    },
    {
      "name": "frontend",
      "type": "static",
      "build": {
        "type": "nixpacks",
        "path": "frontend"
      },
      "env": {
        "VITE_API_BASE_URL": {
          "type": "url",
          "service": "backend"
        }
      },
      "routes": [
        {
          "path": "/*",
          "service": "frontend"
        },
        {
          "path": "/api/*",
          "service": "backend"
        }
      ]
    }
  ]
}